{
    "version" : 2,
    "framework": null,
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/(.*\\.(?:css|png|jpg|jpeg|gif|svg|ico|ttf|woff|woff2|eot|ptf|webp|avif|txt))$",
            "dest": "/public/$1"
        },
        {"src": "/(.*)", "dest": "/api/index.php"}
    ],
    "public": true,
    "buildCommand": "vite build",
    "outputDirectory": "public",
    "env": {
        "APP_ENV": "production",
        "APP_TIMEZONE": "Asia/Phnom Penh",
        "APP_DEBUG": "false",
        "APP_KEY": "https://yourproductionurl.com",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie",
        "DB_CONNECTION": "mysql"
    }
}
